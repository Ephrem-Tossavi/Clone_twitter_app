<%= render 'header', post: @post %>

<h3>Send with the following content</h3>
<%= form_with(model: @post, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p>Content:<%= @post.content %></p>
  <%= form.submit  "Send" %>
  <%= form.submit "Retour", name: 'back' %>
<% end %>

<%= render 'footer', post: @post %>